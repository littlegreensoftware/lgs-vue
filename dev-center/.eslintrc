{
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "html" // required for linting *.vue files
    ],
    "root": true,
    "rules": {
      // allow paren-less arrow functions
      "arrow-parens": 0,
      // allow async-await
      "generator-star-spacing": 0,
      // allow debugger during development
      "no-console": 1,
      // one var declarations
      "one-var": ["error", "always"]
    }
}// https://eslint.org/docs/user-guide/configuring
